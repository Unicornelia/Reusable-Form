{
  "compilerOptions": {
    "target": "es2018",
    "module": "ESNext",
    "jsx": "react",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./packages",
    "paths": {
      "@src/*": ["../src/*"]
    },
    "types": ["jest"],
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
  }
}
